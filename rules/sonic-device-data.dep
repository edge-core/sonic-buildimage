
SPATH       := $($(SONIC_DEVICE_DATA)_SRC_PATH)
DEP_FILES   := $(SONIC_COMMON_FILES_LIST) rules/sonic-device-data.mk rules/sonic-device-data.dep   
DEP_FILES   += $(SONIC_COMMON_BASE_FILES_LIST)
