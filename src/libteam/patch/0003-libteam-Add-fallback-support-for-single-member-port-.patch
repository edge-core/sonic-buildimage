+++ b/teamd/teamd_runner_lacp.c
@@ -138,6 +138,8 @@ struct lacp {
 #define		LACP_CFG_DFLT_SYS_PRIO 0xffff
 		bool fast_rate;
 #define		LACP_CFG_DFLT_FAST_RATE false
+		bool fallback;
+#define		LACP_CFG_DFLT_FALLBACK false
 		int min_ports;
 #define		LACP_CFG_DFLT_MIN_PORTS 1
